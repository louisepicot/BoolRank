              <li class= "share-style">
                <input type="text" id="bar" value="https://boolrank.herokuapp.com/polls/<%= @poll.id %>/start"></input>
              </li>
              <li class="share-style">
                <button class="clipboard-btn btn-default link-bar" data-clipboard-action="copy" data-clipboard-target="#bar">Copy Link
                </button>
              </li>
             <!--  </li>
              <li class="share-style">
                <i class="fa fa-twitter" aria-hidden="true"></i><span>Twitter</span>
              </li> -->
