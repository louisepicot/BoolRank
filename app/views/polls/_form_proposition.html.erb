<%= simple_form_for([@poll, @proposition], url: poll_propositions_path(@poll), method: 'post') do |f| %><div class="flex-box">


  <div class="name-box">
<p>Short option description:</p>
    <%= f.input :name, placeholder: "Option", label: false, :maxlength => 30, autofocus: true %>
    <%= f.hidden_field :score, value: 0 %>

</div>

<div class="photo-box">
  <p>(picture:)</p>
    <%= f.input :photo, as: :attachinary %>
</div>
    </div>
    <%= f.hidden_field :hashtag, value: "#" %>
    <%= f.hidden_field :description, placeholder: "Give a small description (optional)" %>
    <%= f.button :submit, class: " flex-box"  %>

<% end %>



